<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zero.hotelmanagement.dao.LogDao">
    <select id="selectLogByTimeAndUser" resultType="com.zero.hotelmanagement.pojo.Log">
        select *
        from log l
        <where>
            <if test="user!=null and user.id!=null">
            and l.uid=#{uid}
            </if>
            <!-- “&lt;”表示小于号 "&gt;"表示大于号-->
            l.time &lt; #{max} and l.time &gt; #{min}
        </where>
    </select>

    <delete id="deleteLogByTime">
        delete from log l
        <!-- “&lt;”表示小于号 "&gt;"表示大于号-->
        where l.time &lt; #{max} and l.time &gt; #{min}
    </delete>
</mapper>
